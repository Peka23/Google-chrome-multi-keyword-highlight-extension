{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker":"background.js"
  },
  "content_scripts": [
    {
        "matches": ["*://*/*"],
        "js": ["contentScript.js"]
    }
],
  "action": {
    "default_popup": "Highlighter.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}